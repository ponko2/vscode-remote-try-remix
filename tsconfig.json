{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/remix/tsconfig.json"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@react-router/node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"]
  }
}
