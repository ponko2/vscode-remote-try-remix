{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/remix/tsconfig.json"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": [
      "@remix-run/node",
      "@remix-run/react/future/single-fetch.d.ts",
      "vite/client"
    ],
    "target": "ES2022",
    "baseUrl": "."
  }
}
